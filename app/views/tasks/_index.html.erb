
<% project.tasks.each do |task| %>
<%= simple_form_for [project, task], remote: true, html: { id: "form_#{task.id}" } do |f| %>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12-fluid">
      <%= f.input :status, label: false, as: :boolean, input_html: { id: "task-check-#{task.id}", class: "task-check", data: { task_id: task.id } } %>
      <% end %>
      <!--     <input type="checkbox" class='project-show-product-checkbox'> -->
      <div class="task-index-product-body">
        <%= task.description %>

        <%= link_to 'Delete', project_task_path(id: task.project.id, project_id: project.id), method: :delete, class: "task-index-btn" %></br>
        <%#= link_to 'Edit Task', task_path(task) %>
      </div>
    </div>
  </div>
</div>
<% end %>

