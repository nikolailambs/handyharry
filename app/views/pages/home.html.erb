<div class="banner">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-5 text-center">

        <div class="container-content">
          <h1><em>Handy</em> Harry</h1>
          <p>The Task Manager for Handymen</p>
          <div style="height: 40px; width: 100%; font-size: 3vh" id="typed-content"></div>
        </div>
      </div>

      <% if !current_user %>

        <div class="col-xs-12 col-md-offset-3 col-md-4">
          <div class="new-handy">
            <div class="new-handy_intro">
              <h4>Become a Handy Harry</h4>
              <p>Create an account</p>
            </div>
           <div class="new-handy_form">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>
              <div class="form-inputs">
                <%= f.input :first_name, label: false, placeholder:'Charlotte' %>
                <%= f.input :second_name, label: false, placeholder:'Vercarre' %>
                <%= f.input :email, label: false, placeholder: "charlotte.vercarre@gmail.com", autofocus: true %>
                <%= f.input :password, label: false, placeholder: '******', hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                 <%= f.input :password_confirmation, label: false, placeholder: 'Confirm your password' %>
                <%= f.hidden_field :handy, value: true %>
              </div>
              <div class="form-actions">
                <%= f.button :submit, "Sign up" %>
              </div>
            <% end %>
            <hr>
            <div class="new-handy_login">
              <p>Already have an account?</p>
             <%- if controller_name != 'sessions' %>
              <%= link_to "Log in", new_session_path(resource_name) %><br />
              <% end -%>
            </div>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>


<div class="wrapper-offer">
  <div class="container">
    <div class="row">
      <h2><em class="orange">Handy Harry</em>  in your pocket</h2>
      <div class="col-xs-12 col-md-4">
        <div class="new-handy-value-prop">
          <div class="new-handy-value-prop-content">
              <div>
                <i class="fa fa-wrench fa-5x" aria-hidden="true"></i>
              </div>
              <span class="new-handy-value-prop-text">Manage your <br> Home Repairs</span>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-4">
        <div class="new-handy-value-prop">
          <div class="new-handy-value-prop-content">
            <div>
                <i class="fa fa-tasks fa-5x" aria-hidden="true"></i>
              </div>
              <span class="new-handy-value-prop-text">Add tasks</span>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-4">
        <div class="new-handy-value-prop">
          <div class="new-handy-value-prop-content">
            <div>
                <i class="fa fa-comment fa-5x" aria-hidden="true"></i>
              </div>
              <span class="new-handy-value-prop-text">Communicate with your customers</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<script src="https://unpkg.com/typed.js@2.0.6/lib/typed.js"></script>
<script>

const typed = new Typed("#typed-content", {
  strings: ["", "Manage Home Repairs", "Manage Tasks", "Communicate with your customers"],
  typeSpeed: 85,
  smartBackspace: true,
  backSpeed: 100,
  loop: true,
  showCursor: false
});


</script>



