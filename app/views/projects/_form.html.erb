<%= simple_form_for @project do |f| %>
<!-- INPUT NICOLAI FOR PROJECT -->

  <%= f.input 'title' %>
  <%= f.input 'description' %>
  <%= f.input 'address' %>
  <%= f.input 'deadline' %>

  <div class="task-input-field">
    <h4>Do you want to add a Task for that project?</h4>
    <%= f.simple_fields_for :tasks do |task| %>
      <%= render 'task_field', f: task %>
    <% end %>
  </div>
  <div class="assign-to-handy-field">
    <h4>Assign the project to an handyman!</h4>
    <%= f.association :handy, :include_blank => false, collection: User.where(handy: true) %>
  </div>
  <%= f.button :submit %>
<% end %>
